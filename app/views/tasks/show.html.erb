<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>
<h2><%= link_to "Back to list", tasks_path(@tasks) %></h2>
<h2><%= link_to "Edit a task", edit_task_path(@task) %></h2>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Delete #{@task.title}?"}
%>
